        android:keepScreenOn="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/button01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="Ej01: Variantes Callback Btn"
            app:icon="@android:drawable/ic_menu_set_as" />

        <Button
            android:id="@+id/button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ej02: Contadores"
            app:icon="@android:drawable/btn_star_big_on" />

        <Button
            android:id="@+id/button03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ej03: BotÃ³n capturador" />

        <Button
            android:id="@+id/button04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ej04: Contador complejo"
            app:icon="@android:drawable/btn_star_big_on" />

        <Button
            android:id="@+id/button05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_dynamic_tertiary80"
            android:text="Ej05: CheckBoxes 1" />

        <Button
            android:id="@+id/button06"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/material_dynamic_tertiary80"
            android:text="Ej06: CheckBoxes 2"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button07"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/material_dynamic_tertiary80"
            android:text="Ej07: CheckBoxes 3"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button08"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
